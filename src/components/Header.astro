---
import logoUrl from '../assets/img/logo.svg';
import "../assets/scss/components/_header.scss";
---

<header>
  <div class="header-inner">
    <!-- ✅ lien d'accueil compatible GitHub Pages -->
    <a href={import.meta.env.BASE_URL} aria-label="Accueil Happyclicks">
      <img src={logoUrl} alt="Happyclicks" class="logo" />
    </a>

    <!-- Navigation -->
    <nav id="site-nav" class="nav">
      <a href={`${import.meta.env.BASE_URL}portfolio/`}>Portfolio</a>
      <a href={`${import.meta.env.BASE_URL}services/`}>Services</a>
      <a href={`${import.meta.env.BASE_URL}a-propos/`}>À propos</a>
      <a href={`${import.meta.env.BASE_URL}contact/`}>Contact</a>
    </nav>
  </div>
</header>

<!-- Script pour le menu mobile -->
<script>
  const btn = document.querySelector(".hamb");
  const nav = document.getElementById("site-nav");
  if (btn && nav) {
    btn.addEventListener("click", () => {
      const open = btn.getAttribute("aria-expanded") === "true";
      btn.setAttribute("aria-expanded", String(!open));
      nav.classList.toggle("open", !open);
    });
  }
</script>
