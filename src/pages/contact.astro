---
import Base from "../layouts/Base.astro";
import "../assets/scss/base.scss";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---
<Base title="Contact — Happyclicks">
  <Header />

  <div class="container">
    <section class="hero">
      <span class="eyebrow">Contact</span>
      <h1>Parlons de votre projet</h1>
      <p class="lead">Un site à créer, une refonte, ou simplement des questions ? J’écoute.</p>
    </section>

    <section class="section">
      <h2>Écrivez-moi</h2>
      <form name="contact" method="POST" data-netlify="true">
        <input type="hidden" name="form-name" value="contact" />
        <p><label>Nom<br /><input type="text" name="name" required /></label></p>
        <p><label>Email<br /><input type="email" name="email" required /></label></p>
        <p><label>Message<br /><textarea name="message" rows="6" required></textarea></label></p>
        <p><button class="btn primary" type="submit">Envoyer</button></p>
      </form>
      <p class="sub">Vous préférez l’email ? → <a href="mailto:hello@happyclicks.fr">caroline.briois@happyclicks.fr</a></p>
    </section>
  </div>

  <Footer />
</Base>

<style>
  form input, form textarea {
    width: 100%;
    border-radius: 12px;
    border: 1px solid #2a3040;
    padding: 12px 14px;
    background: #151923;
    color: #e6e9ef;
  }
  form input:focus, form textarea:focus {
    outline: none;
    border-color: #3a4257;
  }
  form p {
    margin: 0 0 14px;
  }
</style>
