---
import Base from "../layouts/Base.astro";
import "../assets/scss/base.scss";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---
<Base title="Accueil — Happyclicks">
  <Header />

  <div class="container">
    <section class="hero">
      <span class="eyebrow">Freelance — Création de sites vitrines</span>
      <h1>Des sites vitrines qui donnent envie de cliquer.</h1>
      <p class="lead">
        Création web sur mesure, légère et performante — pour indépendants, artisans et petites structures.
      </p>
    </section>

    <section class="section">
      <h2>Ce que je fais</h2>
      <p class="sub">Des sites simples, beaux et efficaces — sans usine à gaz.</p>

      <div class="grid">
        <article class="card">
          <div class="card-body">
            <h3>Création de sites vitrines</h3>
            <p>
              Design & développement sur mesure, code propre, responsive et SEO-friendly.
            </p>
          </div>
        </article>
        <article class="card">
          <div class="card-body">
            <h3>Refonte</h3>
            <p>
              Moderniser l’image, améliorer la structure et la performance de votre site.
            </p>
          </div>
        </article>
        <article class="card">
          <div class="card-body">
            <h3>Maintenance & SEO technique</h3>
            <p>
              Vitesse, accessibilité, balisage, petites évolutions de contenu.
            </p>
          </div>
        </article>
      </div>
    </section>

    <section class="cta">
      <h3>Un site à créer ou à refondre ?</h3>
      <p>Parlons de votre projet autour d’un café virtuel ☕</p>
      <a class="btn primary" href="/contact">Me contacter</a>
    </section>
  </div>

  <Footer />
</Base>
